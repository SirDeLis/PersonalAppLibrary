<Window x:Class="PersonalAppLibrary.FileNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonalAppLibrary"
        mc:Ignorable="d"
        Title="FileNameWindow" Height="250" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">Type your category's name</Label>
        <TextBox x:Name="CategoryName" Grid.Row="1" Margin="10"></TextBox>
        <Button Grid.Row="2" Click="Submit_Click">Submit</Button>
    </Grid>
</Window>
